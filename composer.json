{
  "name"              : "jp-toolkit/html-helper",
  "type"              : "library",
  "description"       : "A helper classes based on Laravel Forms, CodeIgniter HTML helper and Yii Framework BaseHtml helper that provides a set of static methods for generating commonly used HTML tags to use in WordPress themes and/or plugins.",
  "keywords"          : [ "wordpress", "wordpress-development", "wordpress-plugin", "wordpress-theme", "jp-toolkit", "html", "form" ],
  "homepage"          : "https://github.com/jprieton/jp-toolkit-html-helper/", 
  "license"           : "GPL-3.0-or-later",
  "minimum-stability" : "stable",
  "require"           : {
    "wptrt/admin-notices" : "^1.0",
    "php"                 : ">=7"
  },
  "support"           : {
    "issues" : "https://github.com/jprieton/jp-toolkit-html-helper/issues",
    "wiki"   : "https://github.com/jprieton/jp-toolkit-html-helper/wiki"
  },  
  "autoload"          : {
    "psr-4" : {
      "JPToolkit\\HtmlHelper\\": "includes/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7"
  }
}
